{
    "compilerOptions": {
        /* Docs: https://www.typescriptlang.org/tsconfig */ "target": "ES6",
        "module": "commonjs",
        "outDir": "build",
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "checkJs": true,
        "allowJs": true,
        "moduleResolution": "Node",
        "lib": ["ES6"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowUnreachableCode": true,
        "useUnknownInCatchVariables": false, // TypeScript 4.4+ only!
        "resolveJsonModule": true
    },
    "ts-node": {
        "swc": true
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": ["node_modules", "<node_internals>/**"]
}
